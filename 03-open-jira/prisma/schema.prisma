generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum EntryStatus {
  pending
  progress
  finished
}

model Entry {
  // Campo ID (es requerido por Prisma)
  id          String   @id @default(uuid())

  // description: {type: String, required: true}
  description String

  // createdAt: {type: Number}
  // Se recomienda DateTime en Prisma para marcas de tiempo.
  // El tipo nativo de la base de datos es m√°s preciso.
  createdAt   DateTime @default(now())

  // status: {type: String, enum: ...}
  status      EntryStatus @default(pending) // Definimos un valor por defecto
}

